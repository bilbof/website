extends layout

block content
  .profile
    .title
      img.pic(src="#{headshot}", alt="alt")
      div
        h1= name
        if menu
          ul.links
            each item in menu
                li 
                  a(href=item.url)= item.name
          
    .about
      .description
        p= description
      if experience
        .experience
          h2 Experience
          table
            thead
              tr
                td Date
                td Role
                td Organisation
            tbody
              for item in experience
                tr
                  td= item.date
                  td= item.role
                  td= item.org
      if projects
        .projects
          h2 Projects
          table
            thead
              tr
                td Project
                td Technologies
                td Organisation
            tbody
              for item in projects
                tr
                  if item.link
                    td: a(href="#{item.link}") #{item.name}
                  else
                    td= item.name
                  td= item.technologies
                  td= item.org  

